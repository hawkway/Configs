# EEEXUBUNTU-CONKY

# Create own window instead of using desktop (required in nautilus)
own_window yes
own_window_type normal
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# fiddle with window
use_spacer right
use_xft yes
xftfont Terminus:size=10
xftalpha 1

override_utf8_locale yes

# Update interval in seconds
update_interval 1.0

# Minimum size of text area
# minimum_size 250 5

# Draw shades?
draw_shades no

# Text stuff
draw_outline no # amplifies text if yes
draw_borders no
#font courier
uppercase no # set to yes if you want all text to be in uppercase

# Stippled borders?
#stippled_borders 3

# border margins
#border_margin 9

# border width
border_width 10

# Default colors and also border colors, grey90 == #e5e5e5
default_color 1691CF

# Text alignment, other possible values are commented
#alignment top_left
alignment bottom_left
#alignment bottom_left
#alignment bottom_right

# Gap between borders of screen and text
gap_x 0
gap_y 0 #34

#Connected to ${wireless_essid eth1} at ${wireless_bitrate eth1}

# stuff after 'TEXT' will be formatted on screen

TEXT
$color
${color 1691CF}SYSTEM ${hr 2}$color
Computer Name: $nodename 
Operating System: ArchLinux #$sysname

Kernel: $kernel 
Architecture: $machine
${time %a %b %d %Y %T}
Uptime: ${uptime}

${color 1691CF}CPU ${hr 2}$color
${freq}MHz   
Load: ${loadavg}   Temp: ${acpitemp}
Processes: ${processes}   Running: ${running_processes}

Core Temps: ${execi 30 sensors | grep 'Core 0:' | cut -c18-19}째C / ${execi 30 sensors | grep 'Core 1:' | cut -c18-19}째C / ${execi 30 sensors | grep 'Core 2:' | cut -c18-19}째C / ${execi 30 sensors | grep 'Core 3:' | cut -c18-19}째C

CPU_1: ${cpu cpu1}% ${cpubar cpu1}
